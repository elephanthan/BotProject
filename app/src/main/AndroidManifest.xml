<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.worksmobile.android.botproject">

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-feature android:required="true" android:name="android.hardware.bluetooth_le"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".feature.Chat.ChatroomList.ChatroomListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".beacon.MainActivity">
        </activity>
        <activity
            android:name=".feature.Chat.Chatroom.ChatroomActivity"
            android:parentActivityName=".feature.Chat.ChatroomList.ChatroomListActivity" />
        <activity android:name=".feature.Chat.NewChatting.NewChattingActivity" android:parentActivityName=".feature.Chat.ChatroomList.ChatroomListActivity" />
        <activity android:name=".feature.MySetting.MySettingActivity" android:parentActivityName=".feature.Chat.ChatroomList.ChatroomListActivity" />

        <service android:name="com.perples.recosdk.RECOBeaconService" />
        <service android:name=".beacon.RecoBackgroundMonitoringService" />
        <service android:name=".beacon.RecoBackgroundRangingService"/>
    </application>

</manifest>